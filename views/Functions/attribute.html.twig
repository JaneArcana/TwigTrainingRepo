{% extends 'index.html.twig' %}

{% block code %}
{% verbatim %}
    <p>
        {{ attribute(object, 'getFoo') }}
        {{ attribute(object, 'setFoo', 'foo') }}
        {{ attribute(object, 'getFoo') }}
        {# equivalent to the non-working foo.data-foo #}
        {{ attribute(object, 'data-foo') }}
    </p>
    <p>
        {{ attribute(object, 'getFoo') is defined ? 'Method exists' : 'Method does not exist' }}
    </p>
{% endverbatim %}
{% endblock code %}

